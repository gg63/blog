<div id="header">
    <div class = "logo">
        <a href="/">ロゴ</a>
    </div>
</div>

   <%= form_with model: @profile, local: true do |f| %>
    <div class="form-group">
        <%= f.label :name , "ニックネーム" %>
        <%= f.text_field :name  %>
    </div>
    
    <div class="form-group">
        <%= f.label :study, "学習歴" %>
        <%= f.text_field :study %>
    </div>
    
    <div class="form-group">
        <%= f.label :purpose, "Rails学習の目的" %>
        <%= f.text_field :purpose %>
    </div>
    <div class="form-group">
        <%= f.label :image, "画像" %>
        <%= f.file_field :image %>
    </div>
    <div class="submit-block">
        <%= f.submit class: "btn" %>
    </div>
    <% end %>
    <div id="footer">
    <p>© 2020 Rails blog</p>
</div>