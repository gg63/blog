<div id="header">
    <div class = "logo">
        <a href="/">ロゴ</a>
    </div>
    <div class ="link">
        <ul id="nav">
            <li>
               <%= link_to "ログイン", login_path %>
            </li>
        </ul>
    </div>
</div>

<h1>Sign up</h1>

<%= form_with model: @user, local: true do |f| %>
<div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
</div>

<div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
</div>

<div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
</div>

<dvi>
    <%= f.submit "Sign up" %>
</dvi>
<%= link_to "Login", login_path %>

<% end %>

<div id="footer">
    <p>© 2020 Rails blog</p>
</div>