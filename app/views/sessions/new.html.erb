<h2>ログイン</h2>

<%= form_with url: login_path, local: true do |f| %>
    <div class="field">
        <%= f.label :email, "メールアドレス" %><br>
        <%=f.text_field :email, calss: "form_control" %>
    </div>
    
    <div class="field">
        <%= f.label :password, "パスワード" %></br>
        <%=f.password_field :password, calss: "form_control" %>
    </div>
    
    <div class="actions">
        <%= f.submit "ログイン", class: "btn" %>
    </div>
    
    <%= link_to "新規登録", new_user_path %>
<% end %>

<div id="footer">
    <p>© 2020 Rails blog</p>
</div>
