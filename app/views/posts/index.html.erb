
<div id="header">
    <div class = "logo">
        <a href="/">ロゴ</a>
    </div>
    <div class ="link">
        <ul id="nav">
            <li>
                <%= link_to "投稿", new_post_path %>
            </li>
               <li>
                <%= link_to "プロフィール", new_profile_path %>
            </li>
            <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
            </li>
        </ul>
    </div>
</div>
<div class="content-wrapper">
    <div class="content-block">
        <% @posts.each do |post| %>
            <div class="content">
    <!--<= link_to '削除', post_path(post), method: :delete, class: 'command' %>-->
                <div class="user-about">
                    <div class="image">
                        <%= image_tag post.user.image, style: "width: 60px; border-radius: 50%;" %>
                    </div>
                    <div class="profile">
                        <div class="name-study">
                            <div class="name">
                                <%= post.user.name %>
                            </div>
                            <div class="study">
                               <%= "学習歴: #{post.user.study}年" %>
                            </div>
                        </div>
                        <div class="purpose">
                          <%= "Ruby on Railsを学んでいる目的： #{post.user.purpose} " %>
                        </div>
                    </div>
                </div>
                <div class="text">
                   <p><%= post.content %></p>
                </div>
                
                <% if post.images.present? %>
                    <div class="images">
                     <% post.images.each do |image| %>
                        <%= image_tag image %> <br>
                     <% end %>
                    </div>
                <% end %>
                
                <div class="action-menu">
                    <div class="like">
                        <% if current_user.liked_by?(post.id) %>
                          <td><= link_to 'いいを外す', destroy_like_path(post), method: :delete %></td>
                              <i class="fas fa-heart unlike-btn"></i>
                          <% else %>
                          <td><= link_to 'いいね', post_likes_path(post), method: :post %></td>
                              <i class="fas fa-heart like-btn"></i>
                        <% end %>
                            <%= link_to  '削除', post, method: :delete %>
                    </div>
                    <div class="comment">
                        <svg width="1.4em" height="1.4em" viewBox="0 0 16 16" class="bi bi-chat-dots" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                          <path fill-rule="evenodd" d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
                          <path d="M5 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="sidebar">
        <div class ="box"></div>
        <div class ="box"></div>
    </div>
</div>
   
