
<div id="header">
    <div class = "logo">
        <a href="/">ロゴ</a>
    </div>
    <div class ="link">
        <ul id="nav">
            <li>
                <%= link_to "投稿", new_post_path %>
            </li>
               <li>
                <%= link_to "プロフィール", new_profile_path %>
            </li>
            <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
            </li>
        </ul>
    </div>
</div>
<div class="content-wrapper">
    <div class="content-block">
        <% @posts.each do |post| %>
            <div class="content">
    <%= link_to '削除', post_path(post), method: :delete, class: 'command' %>
                <div class="user-about">
                    <div class="image">
                        <%= image_tag post.user.image, style: "width: 60px; border-radius: 50%;"  %>
                    </div>
                    <div class="profile">
                        <div class="name-study">
                            <div class="name">
                                <%= post.user.name %>
                            </div>
                            <div class="study">
                               <%= "学習歴: #{post.user.study}年" %>
                            </div>
                        </div>
                        <div class="purpose">
                          <%= "Ruby on Railsを学んでいる目的： #{post.user.purpose} " %>
                        </div>
                    </div>
                </div>
                <div class="text">
                   <p><%= post.content %></p>
                </div>
                
                <% if post.images.present? %>
                    <div class="images">
                     <% post.images.each do |image| %>
                        <%= image_tag image %> <br>
                     <% end %>
                    </div>
                <% end %>
                
