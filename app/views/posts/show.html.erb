<div class="content">
    <div class="user-about">
        <div class="image">
            <% if @post.user.image.attached? %>
                <%= image_tag @post.user.image, style: "width: 60px; border-radius: 50%;" %>
            <% else %>
                <%= image_tag "profile.png", style: "width: 60px; border-radius: 50%;" %>
            <% end %>
        </div>
        <div class="profile">
            <div class="name-study">
                <div class="name">
                    <%=link_to @post.user.name, user_path %>
                </div>
                <div class="study">
                   <%= "学習歴: #{@post.user.study}年" %>
                </div>
            </div>
            <div class="purpose">
              <%= "Ruby on Railsを学んでいる目的： #{@post.user.purpose} " %>
            </div>
        </div>
    </div>
    <div class="text">
       <p><%= @post.content %></p>
    </div>
</div>

<div class="row">
    <ul>
        <li class="comment-create">
            <h2 class="text-title">コメント</h2>
        </li>
        <li id="comments_area">
            <%= render partial: 'comments/index', locals: { comments: @comments } %>
        </li>
    </ul>
    <hr>
    <div id=comment_form>
        <div class="comment-create">
            <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
        </div>
        </div>
</div>

<%= link_to "ホームへ戻る", posts_path %>